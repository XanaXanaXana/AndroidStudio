<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/fondo2"
    >

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Escribe tu nombre" />

    <TextView
        android:id="@+id/lblCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudad:"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtCiudad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Escribe tu ciudad" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnOcultarNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocultar Nombre"
            android:backgroundTint="#C9835104"
            android:textColor="#FFFFFF"/>


        <Button
            android:id="@+id/btnMostrarNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Nombre"
            android:layout_marginTop="8dp"
            android:backgroundTint="#C9835104"
            android:textColor="#FFFFFF"/>


        <Button
            android:id="@+id/btnOcultarCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocultar Ciudad"
            android:layout_marginTop="8dp"
            android:backgroundTint="#C9835104"
            android:textColor="#FFFFFF"/>


        <Button
            android:id="@+id/btnMostrarCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Ciudad"
            android:layout_marginTop="8dp"
            android:backgroundTint="#C9835104"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar al inicio"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#C9B87E4E"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
